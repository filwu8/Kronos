# Kronos股票预测应用环境配置

# 模型配置
USE_MOCK_MODEL=true          # 是否使用模拟模型 (true/false)
DEVICE=cpu                   # 计算设备 (cpu/cuda)

# 服务配置
API_HOST=0.0.0.0            # API服务主机
API_PORT=8000               # API服务端口
FRONTEND_HOST=0.0.0.0       # 前端服务主机
FRONTEND_PORT=8501          # 前端服务端口

# 数据配置
DEFAULT_PERIOD=1y           # 默认历史数据周期
DEFAULT_PRED_LEN=30         # 默认预测天数
DEFAULT_LOOKBACK=400        # 默认历史数据长度

# 模型参数
DEFAULT_TEMPERATURE=1.0     # 默认采样温度
DEFAULT_TOP_P=0.9          # 默认核采样概率
DEFAULT_SAMPLE_COUNT=1     # 默认采样次数
MAX_CONTEXT=512            # 最大上下文长度
CLIP_VALUE=5.0             # 数据裁剪值

# 日志配置
LOG_LEVEL=INFO             # 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_FILE=logs/app.log      # 日志文件路径

# 安全配置
CORS_ORIGINS=*             # CORS允许的源 (生产环境应限制)
MAX_BATCH_SIZE=10          # 批量预测最大股票数量
REQUEST_TIMEOUT=60         # 请求超时时间(秒)

# 缓存配置
ENABLE_CACHE=false         # 是否启用缓存
CACHE_TTL=300             # 缓存过期时间(秒)

# 数据源配置
PRIMARY_DATA_SOURCE=akshare    # 主要数据源 (akshare/yfinance)
FALLBACK_DATA_SOURCE=yfinance  # 备用数据源
DATA_FETCH_TIMEOUT=30         # 数据获取超时时间(秒)

# 性能配置
MAX_WORKERS=4             # 最大工作进程数
MEMORY_LIMIT=4G           # 内存限制
CPU_LIMIT=2               # CPU限制

# 开发配置
DEBUG=false               # 调试模式
RELOAD=false              # 自动重载
PROFILING=false           # 性能分析
